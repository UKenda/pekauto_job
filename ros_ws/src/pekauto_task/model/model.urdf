<?xml version="1.0"?>
<robot name="model"
    xmlns:xacro="http://www.ros.org/wiki/xacro">
    <link name="gnss_module">  
        <collision>
            <origin rpy="0 0 0" xyz="0 0 -0.75"/>
            <geometry>
                <box size="0.2 0.2 1.5"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 -0.75"/>
            <geometry>
                <box size="0.05 0.05 1.5"/>

            </geometry>
            <material name="grey">
                <color rgba="0.75 0.75 0.75 1"/>
            </material>
        </visual>
    </link>
    
    <joint name="base_joint" type="fixed">
        <parent link="gnss_module"/>
        <child link="base_link"/>
        <origin xyz="0 0 -1.5" rpy="0 0 0"/>
    </joint>

    <link name="base_link">  
        <collision>
            <origin rpy="0 0 0" xyz="0 0 -0.05"/>
            <geometry>
                <box size="2.5 1.5 0.1"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 -0.05"/>
            <geometry>
                <box size="2.5 1.5 0.1"/>

            </geometry>
            <material name="grey">
                <color rgba="0.75 0.75 0.75 0.1"/>
            </material>
        </visual>
    </link>






</robot>